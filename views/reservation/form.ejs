<% layout('layouts/boilerplate') %>
  <h1 class="my-3">예약하기</h1>
  <form action="/wheel/<%= wheel._id %>/reserve" method="POST" novalidate class="validated-form">
    <div class="form-group my-5">
      <label for="wheelName" class="mb-3 ml-1">제품명</label>
      <div class="form-control">
        <%= wheel.name %>
      </div>
      <input type="text" class="form-control d-none" id="wheelName" value="<%= wheel.name %> "
        name="reservation[wheelName]" required>
    </div>
    <div class="form-group my-5">
      <label for="wheelQuantity" class="mb-3 ml-1">개수</label>
      <input type="number" class="form-control" id="wheelQuantity" min=1 name="reservation[wheelQuantity]" required>
    </div>
    <div class="form-group my-5">
      <label for="customerName" class="mb-3 ml-1">예약자 성함</label>
      <input type="text" class="form-control" id="customerName" name="reservation[customerName]" required>
    </div>
    <div class="form-group my-5 d-none">
      <label for="customerID" class="mb-3 ml-1">예약자 아이디</label>
      <input type="text" class="form-control" id="customerID" value="<%= currentUser.username %>"
        name="reservation[customerID]" required>
    </div>
    <button type="submit" class="btn btn-primary float-right">예약하기</button>
  </form>