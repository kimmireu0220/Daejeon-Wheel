<% layout('layouts/boilerplate') %>
  <h1 class="mb-5">로그인 페이지</h1>
  <form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
      <label for="username" class="form-label">아이디</label>
      <input type="text" class="form-control" username="username" name="username" required>
    </div>
    <div class="mb-3">
      <label for="" class="form-label" for="password">비밀번호</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>

    <button class="btn btn-success">로그인</button>
  </form>